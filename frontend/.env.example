# =============================================================================
# Next.js Frontend Environment Variables
# =============================================================================
# Copy this file to .env.local and update the values for your environment
#
# Note: Variables prefixed with NEXT_PUBLIC_ are exposed to the browser
# Do NOT put sensitive data in NEXT_PUBLIC_ variables

# =============================================================================
# PUBLIC SITE CONFIGURATION
# =============================================================================

# The public URL of your site (used for SEO, meta tags, canonical URLs)
# Include protocol (https://) but no trailing slash
NEXT_PUBLIC_SITE_URL=https://pngpoint.com

# Public API URL for client-side requests
# This is the URL that browsers will use to make API calls
# In production with a proxy, this can be the same as SITE_URL + /api/v1
NEXT_PUBLIC_API_URL=https://pngpoint.com/api/v1

# Public media URL for serving images and other media files
# Can be the same as SITE_URL or a CDN URL
NEXT_PUBLIC_MEDIA_URL=https://pngpoint.com

# =============================================================================
# SERVER-SIDE CONFIGURATION
# =============================================================================

# Internal API URL for server-side requests (Server Components, SSR)
# This is used for server-to-server communication within the same network
# In development: http://127.0.0.1:8000/api/v1
# In production: Use internal Docker/Kubernetes network URL or localhost
INTERNAL_API_URL=http://127.0.0.1:8000/api/v1
