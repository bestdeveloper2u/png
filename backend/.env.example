# =============================================================================
# Django Backend Environment Variables
# =============================================================================
# Copy this file to backend/.env and update the values for your environment.

# =============================================================================
# CORE DJANGO SETTINGS
# =============================================================================
ENV=prod
DJANGO_SECRET_KEY=change-me
DEBUG=False

# =============================================================================
# DOMAIN & CORS SETTINGS
# =============================================================================
FRONTEND_DOMAIN=https://staging.pngpoint.com
CORS_ALLOWED_ORIGINS=https://staging.pngpoint.com,http://localhost:3000
CSRF_TRUSTED_ORIGINS=https://staging.pngpoint.com,http://localhost:3000
ALLOWED_HOSTS=staging.pngpoint.com,www.staging.pngpoint.com,pngpoint.com,www.pngpoint.com

# =============================================================================
# DATABASE SETTINGS (PostgreSQL)
# =============================================================================
PGDATABASE=change-me
PGUSER=change-me
PGPASSWORD=change-me
PGHOST=change-me
PGPORT=5432
PG_SSLMODE=disable
DATABASE_URL=postgresql://change-me:change-me@change-me:5432/change-me?sslmode=disable

# =============================================================================
# REDIS & CACHE SETTINGS
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=1
REDIS_PASSWORD=change-me
REDIS_PASSWORD_FILE=/run/secrets/redis_password
REDIS_CACHE_URL=redis://:change-me@redis:6379/1
CACHE_DEFAULT_TIMEOUT=300

# =============================================================================
# CELERY SETTINGS (Background Task Queue)
# =============================================================================
CELERY_BROKER_URL=redis://:change-me@redis:6379/1
CELERY_RESULT_BACKEND=redis://:change-me@redis:6379/1

# =============================================================================
# EMAIL SETTINGS
# =============================================================================
EMAIL_HOST_USER=you@example.com
EMAIL_HOST_PASSWORD=your-app-password

# =============================================================================
# JWT TOKEN SETTINGS
# =============================================================================
ACCESS_TOKEN_LIFETIME_MINUTES=15
REFRESH_TOKEN_LIFETIME_DAYS=14

# =============================================================================
# NEXT.JS INTEGRATION
# =============================================================================
NEXTJS_URL=http://frontend:3000
REVALIDATE_SECRET=change-me

# =============================================================================
# API & UPLOAD SETTINGS
# =============================================================================
DEFAULT_API_PAGE_SIZE=100
IMAGE_UPLOAD_ALLOWED_EXTENSIONS=.png
# Upload limits (in MB)
IMAGE_UPLOAD_MAX_SIZE_MB=25
MAX_UPLOAD_REQUEST_MB=200
FILE_UPLOAD_MAX_MEMORY_SIZE_MB=250
MAX_UPLOAD_IMAGES_PER_REQUEST=30
# Async upload toggle (True to push to Celery/Redis, False to upload inline)
USE_ASYNC_IMAGE_UPLOADS=True
